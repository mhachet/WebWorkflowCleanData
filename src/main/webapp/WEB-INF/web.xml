<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
        version="3.0">
    <welcome-file-list>
        <welcome-file>HomePage.html</welcome-file>
        <welcome-file>finalWorkflow.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>MainControler</servlet-name>
        <servlet-class>fr.bird.bloom.servlets.MainControler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainControler</servlet-name>
        <url-pattern>/mainControler</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UploadControler</servlet-name>
        <servlet-class>fr.bird.bloom.servlets.UploadControler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadControler</servlet-name>
        <url-pattern>/uploadControler</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReconcileControler</servlet-name>
        <servlet-class>fr.bird.bloom.servlets.ReconcileControler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReconcileControler</servlet-name>
        <url-pattern>/reconcileControler</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Download</servlet-name>
        <servlet-class>fr.bird.bloom.servlets.Download</servlet-class>
        <init-param>
            <param-name>chemin</param-name>
            <param-value>/home/mhachet/workspace/WebWorkflowCleanData/WebContent/output/temp/</param-value>
            <!--<param-value>/var/lib/tomcat7/WebWorkflowCleanData/output/</param-value>-->
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>Download</servlet-name>
        <url-pattern>/temp/*</url-pattern>
    </servlet-mapping>
</web-app>